<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    tools:context=".all_news_list.FragmentOne">

    <View
        android:id="@+id/orange_band"
        android:paddingTop="40dp"
        android:layout_width="match_parent"
        android:background="@color/orange"
        android:layout_height="50sp"
        tools:ignore="MissingConstraints" />

    <ImageButton
        android:id="@+id/button_back"
        android:src="@drawable/back_bt"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/orange"
        tools:ignore="MissingConstraints"
       />

    <TextView
        android:id="@+id/word_news"
        app:layout_constraintBottom_toBottomOf="@id/orange_band"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="22dp"
        android:text="@string/News"
        android:layout_marginTop="20dp" />


    <androidx.recyclerview.widget.RecyclerView
        app:layout_constraintTop_toBottomOf="@id/orange_band"
        android:id="@+id/tagsRV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints" />



 </androidx.constraintlayout.widget.ConstraintLayout>